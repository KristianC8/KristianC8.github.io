---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Tarjeta de Presentación" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta property="og:title" content="Tarjeta de presentación" />
		<meta
			property="og:description"
			content="Kristian Cifuentes Desarrollador y Programador Web. LinkedIn, GitHub, Portofolio"
		/>
		<!-- <meta property="og:image" content="https://i.postimg.cc/T2nB1h7P/portada-portfolio.jpg"> -->
		<meta property="og:image" content="https://iili.io/dAOkHVp.jpg" />
		<meta property="og:url" content="https://kristianc8.github.io/" />
		<meta property="og:type" content="website" />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
	}
	html {
		font-family: "Ubuntu", system-ui, sans-serif;
		/* background: #2a2a2a;*/
		/* background-size: 224px; */
	}
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	body {
		min-width: 320px;
		min-height: 35rem;
		height: 100dvh;
		/* background-color: #1f1f1f; */
		background-color: #010409;
	}
	main {
		display: grid;
		height: 100%;
		place-items: center;
	}
	@font-face {
		font-family: "Ubuntu";
		src: url("/fonts/Ubuntu-Regular.ttf");
		/* font-weight: 400; */
		font-style: normal;
		font-display: swap;
	}
</style>
